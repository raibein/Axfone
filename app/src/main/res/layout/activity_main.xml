<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e6e6"
    android:id="@+id/drawer_layout">

    <!--
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/coolback">

    </LinearLayout>
    -->

    <!--
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </android.support.v7.widget.Toolbar>
    -->

    <include
        layout="@layout/app_bar_main"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>


    <android.support.design.widget.NavigationView
        app:headerLayout="@layout/header"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        app:itemTextColor="@color/greyDark"
        app:itemIconTint="@color/greyDark"
        app:menu="@menu/activity_menu"
        android:layout_gravity="start"
        android:id="@+id/nav_menu"
        android:fitsSystemWindows="true">


    </android.support.design.widget.NavigationView>



    <TableLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:background="#f2f2f2">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#d6f5d6">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome"
                android:textColor="#4769A1"
                android:textSize="20sp"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="18dp"
                android:padding="10dp"
                android:id="@+id/activity_main_welcome" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:visibility="gone"/>

        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="10"
                android:layout_height="wrap_content"
                android:text="First Name"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="40dp"
                android:textStyle="bold"
                android:textSize="16dp"
                />

            <EditText
                android:layout_width="0dp"
                android:layout_weight="20"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text=""
                android:layout_marginLeft="40dp"
                android:textSize="16dp"
                android:backgroundTint="@color/transparent"
                android:id="@+id/activity_main_firstname"/>
        </TableRow>


        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="10"
                android:layout_height="wrap_content"
                android:text="Surname"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="40dp"
                android:textStyle="bold"
                android:textSize="16dp"/>

            <EditText
                android:layout_width="0dp"
                android:layout_weight="20"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text=""
                android:layout_marginLeft="40dp"
                android:textSize="16dp"
                android:backgroundTint="@color/transparent"
                android:id="@+id/activity_main_surname"/>
        </TableRow>


        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="10"
                android:layout_height="wrap_content"
                android:text="Address"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="40dp"
                android:textStyle="bold"
                android:textSize="16dp"/>

            <EditText
                android:layout_width="0dp"
                android:layout_weight="20"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text=""
                android:layout_marginLeft="40dp"
                android:textSize="16dp"
                android:backgroundTint="@color/transparent"
                android:id="@+id/activity_main_address"/>
        </TableRow>


        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="10"
                android:layout_height="wrap_content"
                android:text="City"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="40dp"
                android:textStyle="bold"
                android:textSize="16dp"/>

            <EditText
                android:layout_width="0dp"
                android:layout_weight="20"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text=""
                android:layout_marginLeft="40dp"
                android:textSize="16dp"
                android:backgroundTint="@color/transparent"
                android:id="@+id/activity_main_city"/>
        </TableRow>



        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="10"
                android:layout_height="wrap_content"
                android:text="Country"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="40dp"
                android:textStyle="bold"
                android:textSize="16dp"/>

            <EditText
                android:layout_width="0dp"
                android:layout_weight="20"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text=""
                android:layout_marginLeft="40dp"
                android:textSize="16dp"
                android:backgroundTint="@color/transparent"
                android:id="@+id/activity_main_country"/>
        </TableRow>


        <TableRow>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:layout_marginTop="26dp"
                android:layout_marginLeft="40dp"
                android:background="#66b3ff"
                android:textColor="#ffffff"
                android:gravity="center"
                android:id="@+id/activity_main_edit"/>

        </TableRow>

        <TableRow>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update"
                android:layout_marginTop="26dp"
                android:layout_marginLeft="40dp"
                android:background="#66b3ff"
                android:textColor="#ffffff"
                android:gravity="center"
                android:id="@+id/activity_main_update"/>
        </TableRow>


    </TableLayout>




</android.support.v4.widget.DrawerLayout>

