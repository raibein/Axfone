<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e6e6"
    android:id="@+id/drawer_layout">


    <android.support.design.widget.NavigationView
        app:headerLayout="@layout/header"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        app:itemTextColor="@color/greyDark"
        app:itemIconTint="@color/greyDark"
        app:menu="@menu/activity_menu"
        android:layout_gravity="start"
        android:id="@+id/nav_menu"
        android:fitsSystemWindows="true">


    </android.support.design.widget.NavigationView>


    <TableLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f2f2f2">

        <TableRow
            android:background="@drawable/border"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parking right info"
                android:textSize="20sp"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="18dp"/>
        </TableRow>

        <TableRow>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginLeft="10dp"
                android:textSize="16dp"
                android:editable="false"
                android:visibility="gone"
                android:id="@+id/activity_single_customer_id"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/border"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:layout_marginLeft="40dp"
                android:textStyle="bold"
                android:textSize="16dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginLeft="10dp"
                android:textSize="16dp"
                android:backgroundTint="@color/transparent"
                android:id="@+id/activity_single_customer_name"/>

        </TableRow>

        <TableRow
            android:background="@drawable/border"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Language Id"
                android:layout_marginLeft="40dp"
                android:textStyle="bold"
                android:textSize="16dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginLeft="10dp"
                android:textSize="16dp"
                android:backgroundTint="@color/transparent"
                android:id="@+id/activity_single_customer_lang_id"/>

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/border"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Slots"
                android:layout_marginLeft="40dp"
                android:textStyle="bold"
                android:textSize="16dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginLeft="10dp"
                android:textSize="16dp"
                android:editable="false"
                android:backgroundTint="@color/transparent"
                android:id="@+id/activity_single_customer_slots"/>
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/border"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Slots Used"
                android:layout_marginLeft="40dp"
                android:textStyle="bold"
                android:textSize="16dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginLeft="10dp"
                android:textSize="16dp"
                android:editable="false"
                android:backgroundTint="@color/transparent"
                android:id="@+id/activity_single_customer_slots_used"/>
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/border"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Park Place Id"
            android:layout_marginLeft="40dp"
            android:textStyle="bold"
            android:textSize="16dp"/>


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginLeft="10dp"
                android:textSize="16dp"
                android:editable="false"
                android:backgroundTint="@color/transparent"
                android:id="@+id/activity_single_customer_park_place_id"/>
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Park Place Id"
                android:layout_marginLeft="40dp"
                android:textStyle="bold"
                android:textSize="16dp"
                android:visibility="gone"
                android:id="@+id/activity_single_customer_park_place_name"/>
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/border"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tariff Id"
                android:layout_marginLeft="40dp"
                android:textStyle="bold"
                android:textSize="16dp"/>


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginLeft="10dp"
                android:textSize="16dp"
                android:editable="false"
                android:backgroundTint="@color/transparent"
                android:id="@+id/activity_single_customer_tariff_id"/>
        </TableRow>



        <TableRow
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">
            <!--
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:text="Edit"
                            android:textColor="#ffffff"
                            android:layout_gravity="center"
                            android:backgroundTint="@color/colorPrimaryDark"
                            android:layout_marginTop="8dp"
                            android:id="@+id/activity_single_customer_edit"/>
                        -->

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update"
                android:layout_gravity="center"
                android:background="#66b3ff"
                android:textColor="#ffffff"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="40dp"
                android:id="@+id/activity_single_customer_update"/>
        </TableRow>

    </TableLayout>


</android.support.v4.widget.DrawerLayout>